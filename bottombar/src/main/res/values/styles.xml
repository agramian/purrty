<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="PurrtyBottomBar" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:layout_gravity">bottom</item>
    </style>
    <style name="PurrtyBottomBar.Image">
        <item name="android:paddingTop">@dimen/purrty_bottombar_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/purrty_bottombar_padding_vertical</item>
        <item name="android:paddingLeft">@dimen/purrty_bottombar_padding_horizontal</item>
        <item name="android:paddingRight">@dimen/purrty_bottombar_padding_horizontal</item>
        <item name="android:layout_gravity">center_vertical|left|start</item>
    </style>
    <style name="PurrtyBottomBar.Text">
        <item name="android:layout_weight">1</item>
        <item name="android:paddingTop">@dimen/purrty_bottombar_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/purrty_bottombar_padding_vertical</item>
        <item name="android:paddingLeft">@dimen/purrty_bottombar_padding_horizontal</item>
        <item name="android:paddingRight">@dimen/purrty_bottombar_padding_horizontal</item>
        <item name="android:textAppearance">@style/TextAppearance.Design.Snackbar.Message</item>
        <item name="android:maxLines">@integer/purrty_bottombar_max_lines</item>
        <item name="android:layout_gravity">center_vertical|left|start</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textAlignment">viewStart</item>
    </style>
    <style name="PurrtyBottomBar.Button" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:id">@+id/bottombar_action</item>
        <item name="android:layout_marginLeft">@dimen/purrty_bottombar_extra_spacing_horizontal</item>
        <item name="android:layout_marginStart">@dimen/purrty_bottombar_extra_spacing_horizontal</item>
        <item name="android:layout_gravity">center_vertical|right|end</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:textColor">#FFF</item>
    </style>
</resources>
