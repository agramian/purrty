<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BottomBar" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:layout_gravity">bottom</item>
    </style>
    <style name="BottomBar.Image">
        <item name="android:paddingTop">@dimen/bottombar_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/bottombar_padding_vertical</item>
        <item name="android:paddingLeft">@dimen/bottombar_padding_horizontal</item>
        <item name="android:paddingRight">@dimen/bottombar_padding_horizontal</item>
        <item name="android:layout_gravity">center_vertical|left|start</item>
    </style>
    <style name="BottomBar.Text">
        <item name="android:layout_weight">1</item>
        <item name="android:paddingTop">@dimen/bottombar_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/bottombar_padding_vertical</item>
        <item name="android:paddingLeft">@dimen/bottombar_padding_horizontal</item>
        <item name="android:paddingRight">@dimen/bottombar_padding_horizontal</item>
        <item name="android:textAppearance">@style/TextAppearance.Design.Snackbar.Message</item>
        <item name="android:maxLines">@integer/bottombar_max_lines</item>
        <item name="android:layout_gravity">center_vertical|left|start</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textAlignment">viewStart</item>
    </style>
    <style name="BottomBar.Button" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:id">@+id/bottombar_action</item>
        <item name="android:layout_marginLeft">@dimen/bottombar_extra_spacing_horizontal</item>
        <item name="android:layout_marginStart">@dimen/bottombar_extra_spacing_horizontal</item>
        <item name="android:layout_gravity">center_vertical|right|end</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:textColor">#FFF</item>
    </style>
</resources>
